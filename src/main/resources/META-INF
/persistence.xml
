<?xml version="1.0" encoding = "UTF-8"?>

<persistence version = "2.0" 
   xmlns = "http://java.sun.com/xml/ns/persistence" 
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" 
   xsi:schemaLocation = "http://java.sun.com/xml/ns/persistence 
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
   
   <persistence-unit name = "Eclipselink_JPA" transaction-type = "RESOURCE_LOCAL">
      	<class>com.codinginfinity.research.publication.domain.Abandoned</class>
      	<class>com.codinginfinity.research.publication.domain.Accepted</class>
	 	<class>com.codinginfinity.research.publication.domain.Active</class>
 		<class>com.codinginfinity.research.publication.domain.InProgress</class>
	  	<class>com.codinginfinity.research.publication.domain.InRevision</class>
       	<class>com.codinginfinity.research.publication.domain.NotActive</class>
	   	<class>com.codinginfinity.research.publication.domain.Person</class>
    	<class>com.codinginfinity.research.publication.domain.Publication</class>
	  	<class>com.codinginfinity.research.publication.domain.PublicationDetails</class>
    	<class>com.codinginfinity.research.publication.domain.PublicationState</class>
     	<class>com.codinginfinity.research.publication.domain.PublicationTarget</class>
 		<class>com.codinginfinity.research.publication.domain.PublicationType</class>
	  	<class>com.codinginfinity.research.publication.domain.PublicationTypeState</class>
       	<class>com.codinginfinity.research.publication.domain.Published</class>
	   	<class>com.codinginfinity.research.publication.domain.Submitted</class>
    	<class>com.codinginfinity.research.publication.domain.BibTextEntry</class>
	  	<class>com.codinginfinity.research.publication.domain.LifeCycleState</class>
    	<class>com.codinginfinity.research.publication.domain.PublicationState</class>
      
      <properties>
         <property name = "javax.persistence.jdbc.url" value = "jdbc:mysql://localhost:3306/jpadb"/>
         <property name = "javax.persistence.jdbc.user" value = "root"/>
         <property name = "javax.persistence.jdbc.password" value ="root"/>
         <property name = "javax.persistence.jdbc.driver" value ="com.mysql.jdbc.Driver"/>
       	 <property name ="javax.persistence.schema-generation.database.action" value ="create"/>
         <property name ="javax.persistence.schema-generation.create-source" value ="metadata"/>
         <property name ="javax.persistence.schema-generation.drop-source" value ="metadata"/>
      </properties>
      
   </persistence-unit>
</persistence>
